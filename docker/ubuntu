FROM ubuntu:18.04

ARG produceArtifacts
RUN echo $produceArtifacts

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app
COPY . /usr/src/app

RUN tools/ubuntu/setup.dev.sh
RUN mkdir build
WORKDIR build
RUN cmake -DCMAKE_INSTALL_PREFIX=/usr -DAIRMAP_ENABLE_NETWORK_TESTS=OFF -DCMAKE_VERBOSE_MAKEFILE:BOOL=ON ..
RUN make
RUN ctest -V
RUN make install
#RUN if [ "$produceArtifacts" = "true" ]; then make package && tools/ubuntu/test-packaging.sh; fi
RUN make package
#WORKDIR /usr/src/app
#RUN tools/ubuntu/test-packaging.sh
#RUN tools/ubuntu/cleanup.dev.sh
WORKDIR /tmp
#RUN rm -rf /usr/src/app